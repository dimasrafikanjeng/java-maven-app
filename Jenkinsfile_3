pipeline {
    agent any

    tools {
        // Sesuaikan dengan nama Maven di Jenkins kamu
        maven 'Maven 3.9.11'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the application...'
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Misal deploy ke server, bisa ditambahkan perintah deploy di sini
            }
        }
    }
}
